---
const { href, name, highlight } = Astro.props;
const currentPath = Astro.url.pathname;
const isActive = currentPath === href || currentPath.startsWith(href + '/');
---

<a
  href={href}
  class={`navbar-link block font-medium border border-transparent! hover:border-tertiary-900! box-content font-mono ${highlight === 'true' ? 'bg-tertiary-900 text-white' : ''} ${isActive ? 'underline' : ''} hover:scale-105 active:scale-95 px-1.5 box-border transition-all duration-150 ${Astro.props.class}`}
>
  {name}
</a>
