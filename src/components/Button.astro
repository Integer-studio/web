---
const { text, href } = Astro.props;
---

<a
  href={href}
  class="inline-block py-3 px-4 bg-secondary-700 text-tertiary-50 custom-button text-center hover:italic font-bold font-mono"
  >{text}</a
>

<style>
  .custom-button {
    box-shadow: 6px 6px 0px 0px var(--color-secondary-300);
    transition: all 150ms ease-in-out;
  }
  .custom-button:hover {
    box-shadow: 10px 10px 0px 0px var(--color-secondary-300);
    transform: translate(-4px, -4px);
  }

  .custom-button:active {
    box-shadow: 4px 4px 0px 0px var(--color-secondary-300);
    transform: translate(2px, 2px);
  }
</style>
