<p
  class="inline-flex items-baseline text-3xl tracking-tighter text-primary-600 logo-container"
>
  &#123;<span
    class="text-tertiary-900 inline-block intlogo-wrapper overflow-hidden px-0.5 hover:italic"
    ><span class="intlogo inline-block">integer</span></span
  >&#125;
</p>

<script>
  import { gsap } from 'gsap';
  import { TextPlugin } from 'gsap/TextPlugin';

  gsap.registerPlugin(TextPlugin);

  const container = document.querySelector('.logo-container');
  const text = document.querySelector('.intlogo');

  container?.addEventListener('mouseenter', () => {
    const tl = gsap.timeline();
    tl.to(text, {
      duration: 0.2,
      x: -20,
      opacity: 0,
      ease: 'power2.in',
    })
      .set(text, {
        text: { value: '&#8592;domÅ¯' },
        x: 20,
      })
      .to(text, {
        duration: 0.2,
        x: 0,
        opacity: 1,
        ease: 'power2.out',
      });
  });

  container?.addEventListener('mouseleave', () => {
    const tl = gsap.timeline();
    tl.to(text, {
      duration: 0.2,
      x: 20,
      opacity: 0,
      ease: 'power2.in',
    })
      .set(text, {
        text: { value: 'integer' },
        x: -20,
      })
      .to(text, {
        duration: 0.2,
        x: 0,
        opacity: 1,
        ease: 'power2.out',
      });
  });
</script>
