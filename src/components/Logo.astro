<p
  class="inline-block text-3xl tracking-tighter text-primary-600 logo-container"
>
  &#123;<span class="text-tertiary-900 mx-0.5 intlogo">int</span>&#125;
</p>

<script>
  import { gsap } from 'gsap';
  import { TextPlugin } from 'gsap/TextPlugin';

  gsap.registerPlugin(TextPlugin);

  const container = document.querySelector('.logo-container');
  const text = document.querySelector('.intlogo');

  container?.addEventListener('mouseenter', () => {
    gsap.to(text, {
      duration: 0.2,
      text: {
        value: 'integer',
        type: 'diff',
      },
      ease: 'none',
    });
  });

  container?.addEventListener('mouseleave', () => {
    gsap.to(text, {
      duration: 0.2,
      text: {
        value: 'int',
        type: 'diff',
      },
      ease: 'none',
    });
  });
</script>
