---
import { Picture } from 'astro:assets';
const {
  image,
  alt,
  name,
  description,
  width,
  height,
  tags = [],
  isFullW,
} = Astro.props;
---

<article
  class:list={[
    'col-span-10 md:col-span-5 border',
    { 'md:col-span-10': isFullW },
  ]}
>
  <div class="w-full p-4 mb-4">
    <header class="flex items-start justify-between mb-4">
      <h3
        class:list={[
          'font-semibold',
          { 'text-4xl': isFullW, 'text-2xl': !isFullW },
        ]}
      >
        {name}
      </h3>
      <div
        class="font-mono text-lg flex gap-[1ch] flex-wrap-reverse text-tertiary-700"
      >
        {tags.map((tag) => <p class="tag">{tag}</p>)}
      </div>
    </header>
    <p class="text-lg w-2/3 text-tertiary-700">
      {description}
    </p>
  </div>
  <Picture
    src={image}
    formats={['avif', 'webp']}
    alt={alt}
    width={width}
    height={height}
    class="w-full border-t border-dashed pt-0.5"
  />
</article>

<style>
  .tag + .tag:before {
    content: '- ';
  }
</style>
